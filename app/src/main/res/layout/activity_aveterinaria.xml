<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.luisamoncada.miapp.Aveterinaria">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Servicio de Veterinaria."
        android:textSize="30dp"
        android:fontFamily="casual"
        android:id="@+id/textView"
        android:textColor="#f6a417"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/ivetep"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_above="@+id/bir">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 Horas."
            android:id="@+id/rHoras"
            android:checked="false"
            android:clickable="true"
            android:textSize="25dp"
            android:fontFamily="casual"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inseminaci贸n."
            android:id="@+id/rInseminacion"
            android:checked="false"
            android:clickable="true"
            android:textSize="25dp"
            android:fontFamily="casual"/>

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospitalizaci贸n."
        android:id="@+id/rHospitalizacion"
        android:checked="false"
        android:clickable="true"
        android:textSize="25dp"
        android:fontFamily="casual"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atencion en casa."
            android:id="@+id/rAtencion"
            android:checked="false"
            android:clickable="true"
            android:textSize="25dp"
            android:fontFamily="casual"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Funeraria."
            android:id="@+id/rFuneraria"
            android:checked="false"
            android:clickable="true"
            android:textSize="25dp"
            android:fontFamily="casual"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esterilizaci贸n."
            android:id="@+id/rEsterilizacion"
            android:checked="false"
            android:clickable="true"
            android:textSize="25dp"
            android:fontFamily="casual"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vacunas y desparasitaci贸n."
            android:id="@+id/rvacunas"
            android:checked="false"
            android:clickable="true"
            android:textSize="25dp"
            android:fontFamily="casual"/>

    </RadioGroup>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar."
        android:id="@+id/bir"
        android:layout_marginBottom="79dp"
        android:clickable="true"
        android:textSize="25dp"
        android:fontFamily="casual"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>



